{
  "name": "vivahsetu-backend",
  "version": "2.0.0",
  "description": "VivahSetu Backend Service - Professional Indian Wedding Planning Platform",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec 'npm run build && node dist/index.js'",
    "build": "tsc && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "type-check": "tsc --noEmit",
    "migrate": "ts-node src/migrations/index.ts"
  },
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.0",
    "@supabase/supabase-js": "^2.45.0",
    "dotenv": "^16.3.0",
    "helmet": "^7.1.0",
    "compression": "^1.7.0",
    "joi": "^17.11.0",
    "zod": "^3.22.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.0",
    "node-geocoder": "^4.2.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@types/bcryptjs": "^2.4.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "typescript": "^5.4.0",
    "ts-node": "^10.9.0",
    "tsc-alias": "^1.8.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
